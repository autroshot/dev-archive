---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div class="rounded-lg bg-gray-100 p-4 border-l-[6px]">
  <div>
    <slot name="icon" />
    <span class="font-bold ml-1.5">{title}</span>
  </div>
  <div class="mt-1 first:prose-p:mt-0 last:prose-p:mb-0">
    <slot name="content" />
  </div>
</div>