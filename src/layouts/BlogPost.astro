---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, publishedDate, updatedDate, heroImage } =
  Astro.props;
---

<html lang="ko">
  <head>
    <BaseHead title={title} description={description} />
  </head>

  <body>
    <Header />
    <main class="max-w-full md:max-w-screen-lg mx-auto px-8 md:px-0 py-4">
      <article class="prose prose-sm md:prose-base max-w-none">
        <div class="hero-image">
          {
            heroImage && (
              <img width={1020} height={510} src={heroImage} alt="" />
            )
          }
        </div>
        <div class="not-prose text-center mb-10">
          <h1 class="text-5xl font-bold mb-4">{title}</h1>
          <div class="mb-2 text-gray-500">
            <FormattedDate date={publishedDate} />
            {
              updatedDate && (
                <div class="italic">
                  Last updated on <FormattedDate date={updatedDate} />
                </div>
              )
            }
          </div>
          <hr />
        </div>
        <slot />
      </article>
    </main>
    <Footer />
  </body>
</html>
